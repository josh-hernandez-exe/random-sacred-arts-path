{
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "allowImportExportEverywhere": false,
      "codeFrame": false
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["."]
        }
      },
      "react": {
        "version": "detect"
      }
    },
    "extends": [
      "airbnb",
      "prettier",
      "plugin:node/recommended",
      "plugin:import/recommended",
      "plugin:security/recommended"
    ],
    "plugins": ["node", "security", "prettier"],
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "browser": true,
      "jest": true
    },
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "prettier/prettier": ["error", {"singleQuote": true }],
      "radix": ["off"],
      "no-console": ["off"],
      "no-restricted-syntax": [
        "error",
        "ForInStatement"
      ],
      "node/no-missing-import": ["error", {
        "allowModules": [],
        "resolvePaths": ["/path/to/a/modules/directory"],
        "tryExtensions": [".js", ".json", ".node", ".jsx"]
    }]
    }
  }
